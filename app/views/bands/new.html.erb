<div class="banner-creation-band">
  <%= form_with(model: @band, url: bands_path, local: true) do |form| %>
  <img data-target="preview.preview" style="max-width: 100%; max-height: 200px;">
  <div class="creation-picture"></div>
    <div class="custom-file-input-wrapper">
      <%= label_tag 'photo', class: 'custom-file-label', id: 'photo-input' do %>
          <i class="fas fa-plus"></i>
      <% end %>
      <%= form.file_field :photo, id: 'photo', class: 'hidden-field custom-file-input', accept: 'image/png, image/jpeg, image/jpg', data: { controller: 'preview', target: 'preview.fileField', previewPhoto: 'preview.previewPhoto' } %>
      <%= image_tag '', class: 'preview-image', data: { target: 'preview.previewPhoto' } %>
    </div>
    <div class="custom-file-input-wrapper">
      <%= label_tag 'avatar', id: 'avatar-input', class: 'custom-file-label' do %>
        <i class="fas fa-plus"></i>
      <% end %>
      <%= form.file_field :avatar, id: 'avatar', class: 'hidden-field custom-file-input', accept: 'image/png, image/jpeg, image/jpg', data: { controller: 'preview', target: 'preview.fileField', previewAvatar: 'preview.previewAvatar' } %>
      <%= image_tag '', class: 'preview-image', data: { target: 'preview.previewAvatar' } %>
    </div>
  </div>
  <div>
  <div class="padding-form-creation">
  <div class="name-input-page-creation">
    <i class="far fa-user-circle icon-page-creation"></i>
    <%= form.text_field :name, placeholder: 'Name', class: " input-creation-style " %>
  </div>
  <div class="name-input-page-creation">
    <i class="fas fa-pen pen-input"></i>
    <%= form.text_area :bio, placeholder: "Biography", class: "input-creation-style" %>
  </div>
  <div class="name-input-page-creation">
    <i class="fas fa-map-marker-alt icon-page-creation"></i>
    <%= form.text_field :city, placeholder: "City", class: "input-creation-style" %>
  </div>
  <div class="name-input-page-creation">
    <i class="fas fa-video icon-page-creation"></i>
    <%= form.url_field :video_url, placeholder: "Video URL", class: "input-creation-style" %>
  </div>
    <%= form.collection_select :needed_instrument_id, Instrument.all, :id, :name, prompt: "Add the instrument you need"%>
    <%= form.collection_select :style_id, Style.all, :id, :name, prompt: "Add a style"%>
    <%= form.submit "Create Band", class: "button-creation-band" %>
    <% end %>
  <div>
  </div>
<%# <script src="/path/to/preview_controller.js" type="module"></script> %>
</div>
